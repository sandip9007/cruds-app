<%- include('include/_header') %>

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
           <div class="filter">
               <a href="/"><i class="fa fa-angle-double-left" aria-hidden="true"></i> All User</a>
           </div>
        </div> 
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to update a new account</span>
        </div> 
        <!-- FORM-HANDLING -->
        <form method="post" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <input type="text" name="name" value="<%= user.name %>" placeholder="User name">
                </div>
        
                <div class="form-group">
                    <label for="email" class="text-light">Email</label>
                    <input type="text" name="email" value="<%= user.email %>" placeholder="Email">
                </div>
        
                <div class="form-group">
                    <label for="gender" class="text-light">Gender</label>
                    <div class="radio inline">
                        <input type="radio" name="gender" value="Male" <%= user.gender == 'Male' ?'checked' : '' %>>
                        <label for="gender" class="radio-label">Male</label>
                    </div>
                
                    <div class="radio inline">
                        <input type="radio" name="gender" value="Female" <%= user.gender == 'Female' ?'checked' : '' %>>
                        <label for="gender" class="radio-label">Female</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="gender" class="text-light">Status</label>
                    <div class="radio inline">
                        <input type="radio" name="status" value="Active" <%= user.gender == 'Active' ?'checked' : '' %>>
                        <label for="status" class="radio-label">Active</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" name="status" value="Inactive"<%= user.gender == 'Inactive' ?'checked' : '' %>>
                        <label for="status" class="radio-label">Inactive</label>
                    </div>  
            </div>
            <div class="form-group">
               <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </div>
        </form>
        <!-- FORM-HANDLING -->
    </div>
</main>

<%- include('include/_footer') %>